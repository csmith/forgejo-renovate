{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 0,
  "minimumReleaseAge": "28 days",
  "internalChecksFilter": "strict",
  "assignees": ["chris"],
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths"
  ],
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "matchPackageNames": ["go"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchManagers": ["gomod"],
      "matchPackagePatterns": ["^github\\.com\\/csmith\\/", "^chameth\\.com\\/", "^tailscale\\.com"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ]
}
